<!DOCTYPE html>
<html>
<head>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin </title>
    @Styles.Render("~/Areas/Admin/Content/css")
    @Scripts.Render("~/Areas/Admin/bundles/modernizr")
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="index2.html" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>DA</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Admin</b>DA</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->                
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">

                        <link href="~/Areas/Admin/Content/AdminLTE.css" rel="stylesheet" />
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="../Content/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>Mehmet Fatih GÖÇGÜN</p>
                        
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header"></li>
                    <li class="active treeview">
                        
                            <i class="fa fa-dashboard"></i> @Html.ActionLink("ANASAYFA", "Index", "Home") 
                       
                        
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-files-o"></i>
                            <span>BAYİLER</span>
              
                        </a>
                        <ul class="treeview-menu">
                            <li>@RenderSection("Bottom", false)
                            @Html.ActionLink("Bayiler", "ListDealers", "Dealers")</li>
                            <li><a href="#">@Html.ActionLink("  Bayi Ekle ", "Yeni", "Dealers")</a></li>
                          
                        </ul>
                    </li>
                    
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-pie-chart"></i>
                            <span>SATIŞLAR</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li>@Html.ActionLink("Satışlar", "ListCurrent", "Current")</li>
                            <li><a href="#">  @Html.ActionLink("Satış Ekle", "Yeni", "Current")</a></li>
                            
                        </ul>
                    </li>
                    
                    
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-table"></i> <span>Öğrenciler</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#">@Html.ActionLink("Öğrenciler", "ListStudents", "Students")</a></li>
                            <li><a href="#"> @Html.ActionLink("Öğrenci Ekle", "Yeni", "Students")</a></li>
                        </ul>
                    </li>
                    
                    
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-th"></i> <span>Eğitimler</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#">  @Html.ActionLink("Eğitimler", "ListEducation", "Educations")</a></li>
                            <li><a href="#">  @Html.ActionLink("Eğitim Ekle ", "Yeni", "Educations")</a></li>
                        </ul>
                    </li>
                    
                    
                    <li class="header">Site Yönetimi</li>
                   <i class="fa fa-circle-o text-red"></i>        @Html.ActionLink("Yetkiler", "ListPermission", "Permissions")
                    
                </ul>
            </section>
      
        </aside>
 
        @RenderBody()
       

        
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.3.0
            </div>   
            <strong>Copyright &copy; 2017 <a href="#">MFG</a>.</strong> All rights reserved.
        </footer>
    </div>
    <script>
      $.widget.bridge('uibutton', $.ui.button);
    </script>
 @Scripts.Render("~/Areas/Admin/bundles/jquery")
@Scripts.Render("~/Areas/Admin/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
