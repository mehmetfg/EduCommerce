@model IEnumerable<EduCommerce.Web.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content bg-lighter">
    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/Content/files/ayarlar/3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="title text-white text-center">Eğitim Kadromuz</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="#">AnaSayfa</a></li>
                            <li><a href="#">Kurumsal</a></li>
                            <li class="active text-gray-silver">Eğitim Kadrosu</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Course gird -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-9 blog-pull-right">
                    <div class="row">
                        @foreach (var item in Model)
                        {

                        
                        <div class="col-sm-6 col-md-4">
                            <div class="project mb-30 border-2px">
                                <div class="thumb">
                                    <img class="img-fullwidth" alt="" src="http://placehold.it/275x312">

                                </div>
                                <div class="project-details p-15 pt-10 pb-10">
                                    <h4 class="font-14 font-weight-700 mb-5">Eğitimci Adı: @item.Name</h4>
                                    <h5 class="font-weight-700 text-uppercase mt-0">Görevi: @item.Task </h5>
                                    <h5 class="font-weight-700 text-uppercase mt-0"><a href="#">Detay Profil:@item.Definition </a></h5>
                                </div>
                            </div>
                        </div>
                        }  
                    </div>
                </div>
                @{ Html.RenderPartial("Inc_Left");}
            </div>
        </div>
    </section>
</div>

