@model System.Data.DataTable
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>

            <small>Yönetim Paneli</small>
        </h1>

    </section>

    <section class="content">
        <div class="content-wrapper">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Eğitimler Listesi
                </div>
            </div>
            <div class="portlet-body flip-scroll">
                <table class="table table-bordered table-striped table-condensed flip-content">
                    <thead class="flip-content">
                        <tr>
                            <th class="bg-red-flamingo bg-font-red-flamingo"> Eğitim Adi </th>
                            <th class="bg-red-flamingo bg-font-red-flamingo"> Süre </th>
                            <th class="bg-red-flamingo bg-font-red-flamingo"> Fiyat</th>
                            <th class="bg-red-flamingo bg-font-red-flamingo"> Üniversitei</th>

                            <th class="bg-red-flamingo bg-font-red-flamingo">Durum </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow edu in Model.Rows)
                        {
                            <tr>
                                <th>@edu["Name"].ToString()</th>
                                <th>@edu["Time"].ToString()</th>
                                <th>@edu["Price"].ToString()</th>
                                <th>@edu["University"].ToString()</th>
                                <td class="form-group"> <select><option>aktif</option><option>Pasif</option></select> </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
