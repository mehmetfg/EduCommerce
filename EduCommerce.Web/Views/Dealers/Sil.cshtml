@model EduCommerce.Web.Dealers

@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <h2>Sil</h2>

    <h3>Silmek İstediğinizden Emin misiniz?</h3>
    <div>
       <h4>Bayiler</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Üst Bayi
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpDealer)
            </dd>

            <dt>
              Bayi Tipi
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerType)
            </dd>

            <dt>
                Bayi Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerName)
            </dd>

            <dt>
               Bayi Kullanıcı Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerUser)
            </dd>

            <dt>
              Bayi Şifresi
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerPass)
            </dd>

            <dt>
                Bayi Yetki
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerAuthority)
            </dd>

            <dt>
               Telefon
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerPhone)
            </dd>

            <dt>
                Fax
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerFax)
            </dd>

            <dt>
                Mail
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerMail)
            </dd>

            <dt>
                Adres
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DealerAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IBAN)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IBAN)
            </dd>

            <dt>
               Banka Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BankName)
            </dd>

            <dt>
              Hesap Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccountName)
            </dd>

            <dt>
              Vergi No
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TaxNo)
            </dd>

            <dt>
               Ülke
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CountryID)
            </dd>

            <dt>
                Şehir
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CityID)
            </dd>

            <dt>
              Dil
            </dt>

            

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-default" /> |
                @Html.ActionLink("Geri Dön", "Index")
            </div>
        }
    </div>
</div>